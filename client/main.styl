canvas
  width: 100%
  height: 100%

body
  background-color: #000000

#playSounds
  position: absolute
  top: 10px
  right: 10px

  button
    background: yellow
    padding: 8px 14px
    border: none
    border-radius: 4px
    transition: 0.3s background
    &:hover
      background: yellow + 200
    &.muted
      background: gray